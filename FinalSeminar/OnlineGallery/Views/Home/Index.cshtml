                                <a href="~/Home/AuctionDetail/@item.Id"><img src="~/images/@item.Product.Image" alt="ending"></a>

                            </div>
                            <div class="auction-content">
                                <h6 class="title">
                                    <a href="~/Home/ProductDetail/@item.ProductId">
