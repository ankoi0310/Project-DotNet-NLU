<!DOCTYPE html>
<html>
@await Html.PartialAsync("~/Views/PartialView/Head.cshtml")
<body>
    <!--============= ScrollToTop Section Starts Here =============-->
    @await Html.PartialAsync("~/Views/PartialView/ScrollToTop.cshtml")
    <!--============= ScrollToTop Section Ends Here =============-->
    <!--============= Header Section Starts Here =============-->
    @await Html.PartialAsync("~/Views/PartialView/Header.cshtml")
    <!--============= Header Section Ends Here =============-->
    <!--============= Hero Section Starts Here =============-->
    @await Html.PartialAsync("~/Views/PartialView/Dashboard/Hero.cshtml")
    <!--============= Hero Section Ends Here =============-->
    <!--============= Dashboard Section Starts Here =============-->
    <section class="dashboard-section padding-bottom mt--240 mt-lg--440 pos-rel">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-sm-10 col-md-7 col-lg-4">
                    <div class="dashboard-widget mb-30 mb-lg-0 sticky-menu">
                        <!--============= User Section Starts Here =============-->
                        @await Html.PartialAsync("~/Views/PartialView/Dashboard/User.cshtml")
                        <!--============= User Section Ends Here =============-->
                        <!--============= Menu Section Starts Here =============-->
                        @await Html.PartialAsync("~/Views/PartialView/Dashboard/Menu.cshtml")
                        <!--============= Menu Section Ends Here =============-->
                    </div>
                </div>
                <div class="col-lg-8">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <div class="modal" tabindex="-1" id="form-modal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>
    <!--============= Dashboard Section Ends Here =============-->
    <!--============= Footer Section Starts Here =============-->
    @await Html.PartialAsync("~/Views/PartialView/Footer.cshtml")
    <!--============= Footer Section Ends Here =============-->
    <!--============= Scripts Section Starts Here =============-->
    @await Html.PartialAsync("~/Views/PartialView/Scripts.cshtml")
    @await RenderSectionAsync("Scripts", required: false)
    <!--============= Scripts Section Ends Here =============-->
</body>
</html>
